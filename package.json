{
  "name": "ribbon-finance-contracts",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Smart contracts for Ribbon.finance",
  "scripts": {
    "build": "hardhat compile",
    "console": "hardhat console",
    "hardhat:deploy": "hardhat --network hardhat deploy",
    "kovan:deploy": "hardhat --network kovan deploy",
    "kovan:verify": "hardhat --network kovan etherscan-verify --license MIT --force-license",
    "kovan:export": "hardhat --network kovan export --export exports/kovan.json"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.sol": [
      "solhint -c .solhint.json",
      "prettier --write",
      "yarn test"
    ],
    "*.md": "prettier --write"
  },
  "dependencies": {
    "@airswap/utils": "0.4.2",
    "@chainlink/contracts": "0.0.10",
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.1",
    "@openzeppelin/upgrades": "^2.8.0",
    "axios": "^0.21.1",
    "moment-timezone": "^0.5.33",
    "truffle-contract-size": "^2.0.0",
    "truffle-plugin-verify": "^0.4.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.14.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.9.0",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.3",
    "ethers": "^5.5.3",
    "hardhat": "^2.8.3",
    "hardhat-deploy": "^0.10.5",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-log-remover": "^2.0.2",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "hardhat-watcher": "^2.1.1",
    "lint-staged": "^12.3.4",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.4"
  }
}
